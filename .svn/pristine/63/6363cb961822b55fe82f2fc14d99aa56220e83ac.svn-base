				mapMatierePremierTmp.put(stockMP.getMatierePremier().getCode(), stockMP.getMatierePremier());
				Object []ligne={stockMP.getMatierePremier().getCode(),stockMP.getMatierePremier().getNom(),stockMP.getStock(),""};

